{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": [
        "dev",
        "main"
    ],
    "kubernetes": {
        "fileMatch": [
            ".*\\.yaml$"
        ]
    },
    "flux": {
        "fileMatch": [
            ".*\\.yaml$"
        ]
    },
    "helm-values": {
        "fileMatch": [
            ".*\\.yaml$"
        ]
    },
    "helmv3": {
        "fileMatch": [
            ".*\\.yaml$"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                ".*\\.yaml$"
            ],
            "matchStrings": [
                "repository: (?<depName>.*?)\n\\s+tag: (?<currentValue>.*?)\\s"
            ],
            "datasourceTemplate": "docker"
        }
    ]
}
